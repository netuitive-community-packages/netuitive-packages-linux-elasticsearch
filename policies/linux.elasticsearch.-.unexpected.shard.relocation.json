{
  "policy" : {
    "name" : "Linux ElasticSearch - Unexpected Shard Relocation",
    "description" : "This policy will generate a WARNING event when there are shards relocating, but the total number of nodes has not changed.",
    "scope" : {
      "elementName" : null,
      "elementNameExclude" : null,
      "fqnIncludes" : [ ],
      "fqnExcludes" : [ ],
      "elementType" : null,
      "elementTypes" : [ "SERVER" ],
      "elementTags" : { },
      "elementAttributes" : [ ]
    },
    "duration" : 300,
    "conditions" : [ {
      "metric" : "elasticsearch.cluster_health.shards.relocating",
      "wildcard" : null,
      "metricScopeTags" : { },
      "analytic" : "actual",
      "operator" : ">",
      "level" : 0.0,
      "level2" : null,
      "metricThresholdLevel" : null,
      "metricThresholdAnalytic" : null
    }, {
      "metric" : "elasticsearch.cluster_health.nodes.total",
      "wildcard" : null,
      "metricScopeTags" : { },
      "analytic" : "baselineDeviation",
      "operator" : "undefined",
      "level" : null,
      "level2" : null,
      "metricThresholdLevel" : null,
      "metricThresholdAnalytic" : null
    } ],
    "eventConditions" : [ ],
    "actions" : [ {
      "type" : "event",
      "category" : 2
    } ],
    "enabled" : true,
    "deleted" : false
  }
}