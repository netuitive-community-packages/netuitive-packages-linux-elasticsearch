{
  "policy": {
    "actions": [
      {
        "category": 2,
        "type": "event"
      }
    ],
    "conditions": [
      {
        "analytic": "actual",
        "level": 75,
        "metric": "netuitive.linux.diskspace.avg_byte_percentused",
        "operator": ">"
      }
    ],
    "deleted": false,
    "description": "The average utilization across your Elastic Search data node storage devices are more than 75%. ",
    "duration": 600,
    "enabled": false,
    "name": "Linux ElasticSearch - Disk space is more than 75% used on data node",
    "scope": {
      "elementTags": {
        "service": "elasticsearch-data"
      },
      "elementTypes": [
        "SERVER"
      ]
    }
  }
}